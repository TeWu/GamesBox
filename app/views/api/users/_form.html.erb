<%= form_with(model: user, local: true) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, id: :user_username %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, id: :user_password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, id: :user_password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :roles_bitmask %>
    <%= f.number_field :roles_bitmask, id: :user_roles_bitmask %>
  </div>

  <div class="field">
    <%= f.label :is_admin %>
    <%= f.check_box :is_admin, id: :user_is_admin %>
  </div>

  <div class="field">
    <%= f.label :display_name %>
    <%= f.text_field :display_name, id: :user_display_name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= f.label :url_segment %>
    <%= f.text_field :url_segment, id: :user_url_segment %>
  </div>

  <div class="field">
    <p>Invite key:</p>
    <pre><%= user.invite_key %></pre>
  </div>

  <% if user.new_record? %>
  <hr/>
  <div class="field">
    <%= f.label :registration_invite_key %>
    <%= f.text_field :registration_invite_key, id: :user_registration_invite_key %>
  </div>
  <hr/>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
